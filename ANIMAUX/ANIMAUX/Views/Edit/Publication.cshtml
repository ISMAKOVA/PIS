<h3>Изменить объявление</h3>
@using (Html.BeginForm("Publication", "Edit", FormMethod.Post, new { @class = "mt-3" }))
{
    <div class="form-group row">
        Id
        <div>
            <input readonly type="text" name="id" id="id" value="@ViewBag.id">
        </div>
    </div>

    <div class="form-group row">
        Добавлено
        <div>
            <input type="date" readonly name="newDate" id="newDate" value="@ViewBag.added">
        </div>
    </div>

    <div class="form-group row">
        URL Фото
        <div>
            <input type="text" name="newUrlPhoto" id="newUrl" value=@ViewBag.url>
        </div>
    </div>

    <div class="form-group row">
        Город
        <div>
            <input type="text" name="newUrlCity" id="newCity" value=@ViewBag.city>
        </div>
    </div>


    <div class="form-group row">
        <select name="newAnimal">
            @foreach (var item in ViewBag.animals as IEnumerable<ANIMAUX.Models.animal>)
            {
                <option value="@Html.DisplayFor(modelItem => item.name)"
                        @(ViewBag.animal == item.name ? "selected" : "")>
                    @Html.DisplayFor(modelItem => item.name)
                </option>
            }
        </select>
    </div>
    <div>
        <input type="radio" id="cock" name="type" value="lost" @(ViewBag.type == "l" ? "checked" : "")>Потеряно <br>
        <input type="radio" id="cock" name="type" value="found" @(ViewBag.type == "f" ? "checked" : "")>Найдено <br>
    </div>


    <div class="form-group row">
        <input type="submit" value="Изменить">
        @Html.ActionLink("Отмена", "Publications", "Home")
    </div>
}
