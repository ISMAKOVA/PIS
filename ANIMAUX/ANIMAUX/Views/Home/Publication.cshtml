@model IEnumerable<ANIMAUX.Models.RegistrationPublication>
@{
    ViewBag.Title = "Oбъявление";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

</head>
<body class="card-body">
    <div>
        <div class="card-header">
            <h4 style="text-align:center"> Добавить объявление</h4>
        </div>
        <div>
            @using (Html.BeginForm("AddPublication", "Home", FormMethod.Post))
            {

                <div id="add">
                    <div class="form-group">
                        <div class="editor-lable">
                            
                        </div>
                        <label for="Foto">Фото:</label>

                        <input type="url" name="addUrl" class="form-control">
                        или
                        <form enctype="multipart/form-data" method="post">
                            <input type="file" name="photo" multiple accept="image/*,image/jpeg">
                        </form>
                    </div>
                    <div class="form-group">
                        <label for="Sity">Город:</label>
                        <input type="text" name="addCity" class="form-control">  <span asp-validation-for="addCity"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Имя:</label>
                        <select name="addAnimal">
                            @foreach (var item in ViewBag.animals as IEnumerable<ANIMAUX.Models.animal>)
                            {
                                <option value="@Html.DisplayFor(modelItem => item.name)">
                                    @Html.DisplayFor(modelItem => item.name) |
                                    @Html.DisplayFor(modelItem => item.category)
                                </option>
                            }
                        </select>
                    </div>
                    <label for="Status">Статус:</label>
                    <div class="form-check">
                        <input type="radio" id="cock" name="type" value="lost">Потеряно
                    </div>
                    <div class="form-check">
                        <input type="radio" id="cock" name="type" value="found" checked)>Найдено
                    </div>
                    <input type="submit" value="Добавить">

                </div>
            }
        </div>
    </div>
</body>
</html>
