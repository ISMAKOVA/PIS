<div class="card mt-3 w-75 mx-auto">
    <div class="card-header">
        Карточка животного №@ViewBag.cardId
    </div>
    <div class="card-body">
        @using (Html.BeginForm("DeleteCards", "Home", FormMethod.Post))
        {
            <input type="text" value=@ViewBag.cardId name="cardId" id="cardId" hidden>
            <div class="form-group row">
                <label for="name" class="col-sm-3 col-form-label">Кличка животного</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="name" value=@ViewBag.animal.name>
                </div>
            </div>
            <div class="form-group row">
                <label for="date_added" class="col-sm-3 col-form-label">Дата размещения объявления</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="date_added" value=@ViewBag.card.date_added>
                </div>
            </div>
            <div class="form-group row">
                <label for="sex" class="col-sm-3 col-form-label">Пол животного</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="sex" value=@ViewBag.animal.sex>
                </div>
            </div>
            <div class="form-group row">
                <label for="birth_date" class="col-sm-3 col-form-label">Дата рождения</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="birth_date" value=@ViewBag.animal.birth_date>
                </div>
            </div>
            <div class="form-group row">
                <label for="district" class="col-sm-3 col-form-label">Округ</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="district" value=@ViewBag.district.name>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <button class="col-sm-2 mr-3 btn btn-warning">Изменить</button>
                <button class="col-sm-2 btn btn-danger" value="DeleteCards">Удалить</button>
            </div>
        }
    </div>
</div>
