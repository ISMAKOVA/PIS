<!--https://localhost:44399/Home/Card?cardId=7-->
<div class="card mt-3 w-75 mx-auto">
    <div class="card-header">
        Карточка животного @ViewBag.cardId
    </div>
    <div class="card-body">
        @if (@ViewBag.cardId != "New")
        {
            using (Html.BeginForm("DeleteCards", "Home", FormMethod.Post))
            {
                <input type="text" value=@ViewBag.cardId name="cardId" id="cardId" hidden>

                @ANIMAUX.Helpers.BootstrapHtml.LabelInput("Кличка животного", "name", @ViewBag.animal.name)

                @ANIMAUX.Helpers.BootstrapHtml.LabelInput("Дата размещения объявления", "date_added", @ViewBag.card.date_added.ToShortDateString())

                @ANIMAUX.Helpers.BootstrapHtml.LabelInput("Пол животного", "sex", @ViewBag.animal.sex)

                @ANIMAUX.Helpers.BootstrapHtml.LabelInput("Дата рождения", "birth_date", @ViewBag.animal.birth_date.ToShortDateString())

                @ANIMAUX.Helpers.BootstrapHtml.LabelInput("Округ", "district", @ViewBag.district.name)

                <div class="form-group row justify-content-center">
                    <!--<button class="col-sm-2 mr-3 btn btn-warning">Изменить</button>-->
                    <button class="col-sm-2 btn btn-danger" value="DeleteCards">Удалить</button>
                </div>

                @Html.ActionLink("Изменить", "Card", "Edit", new { id = ViewBag.cardId}, null)
            }
        }
        else
        {
            using (Html.BeginForm("AddCard", "Home", FormMethod.Post))
            {
                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-form-label">Животное</label>
                    <div class="col-sm-6">
                        @ANIMAUX.Helpers.BootstrapHtml.MyDropdown("dropDownAnimals", ViewBag.animals, "Животные")
                    </div>
                </div>

                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-form-label">Округ</label>
                    <div class="col-sm-6">
                        @ANIMAUX.Helpers.BootstrapHtml.MyDropdown("dropDownDistricts", ViewBag.districts, "Округ")
                    </div>
                </div>
                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-form-label">Организация</label>
                    <div class="col-sm-6">
                        @ANIMAUX.Helpers.BootstrapHtml.MyDropdown("dropDownOrganisations", ViewBag.organisations, "Организации")
                    </div>
                </div>

                @ANIMAUX.Helpers.BootstrapHtml.LabelInput("Дата размещения объявления", "date_added", "", "date")
                <div class="form-group row justify-content-center">
                    <button class="col-sm-2 btn btn-info" value="AddCard">Добавить</button>
                </div>
            }
        }
    </div>
</div>
