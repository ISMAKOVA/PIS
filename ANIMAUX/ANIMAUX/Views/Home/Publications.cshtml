@{
    ViewBag.Title = "Oбъявления";
}
<table>
    <tr>
        <td>id</td>
        <td>Добавлено</td>
        <td>Фотко</td>
        <td>Животное</td>
        <td>Город</td>
        <td>Тип</td>
    </tr>

    @if(ViewBag.error != null)
    {
        @ViewBag.error
    }

    @foreach (var item in ViewBag.Pubs as IEnumerable<ANIMAUX.Models.publications>)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.id)</td>
            <td>@Html.DisplayFor(modelItem => item.added_date)</td>
            <td>
                <img style="max-height:300px" src="@Html.DisplayFor(modelItem => item.photo)" />
            </td>
            <td>
                @foreach (var anim in ViewBag.animals as IEnumerable<ANIMAUX.Models.animals>)
                {
                    if(item.animal_id == anim.passport_number)
                    {
                        @Html.DisplayFor(modelItem => anim.name);
                        break;
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Изменить", "Publication", "Edit", new { id = item.id }, null)
                @Html.ActionLink("Удалить", "RemovePublication", "Home", new { id = item.id }, null) </td>
            <td>@Html.DisplayFor(modelItem => item.city)</td>
            <td>@(@Html.DisplayFor(modelItem => item.type).ToString() == "l" ? "Потеряно" : "Найден")
        </tr>
    }

</table>

@using (Html.BeginForm("AddPublication", "Home", FormMethod.Post))
{
<div id="add">
    <h2> Добавить публикацию</h2>
    <input type="text" placeholder="URL пикчи" name="addUrl">
    <input type="text" placeholder="Город" name="addCity">
    <select name="addAnimal">
        @foreach (var item in ViewBag.animals as IEnumerable<ANIMAUX.Models.animals>)
        {
            <option value="@Html.DisplayFor(modelItem => item.name)">
                @Html.DisplayFor(modelItem => item.name)
            </option>
        }
    </select><br>
    <input type="radio" id="cock" name="type" value="lost" >Потеряно <br>
    <input type="radio" id="cock" name="type" value="found" checked)> Найдено <br>
    <input type="submit" value="Добавить">
</div>
}